    {:type "string",
     :is_file true,
     :default_value "/etc/dse/keystores/client.keystore",
     :depends :enabled},
    :keystore_password
    {:type "string",
     :password true,
     :validators [{:name :length :params {:min 6}}],
     :default_value "cassandra",
     :depends :enabled},
