<configuration scan="true">

    <if condition='isDefined("dse.console.useColors")'>
        <then>
            <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
                <withJansi>true</withJansi>
                <target>System.err</target>
                <encoder>
                    <pattern>%highlight(%-5level) %green(%date{yyyy-MM-dd HH:mm:ss}) %c: %msg%n</pattern>
                </encoder>
            </appender>
        </then>
    </if>
    <if condition='isNull("dse.console.useColors")'>
        <then>
            <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
                <target>System.err</target>
                <encoder>
                    <pattern>%-5level %date{yyyy-MM-dd HH:mm:ss} %c: %msg%n</pattern>
                </encoder>
            </appender>
        </then>
    </if>

    <root level="{{root-level}}">
        <appender-ref ref="STDERR" />
    </root>

    <logger name="org.eclipse.jetty" level="{{logger-jetty-level}}"/>
</configuration>
